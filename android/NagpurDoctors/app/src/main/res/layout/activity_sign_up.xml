<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sidproj.nagpurdrs.screens.SignUpActivity">

    <include
        android:id="@+id/topBar"
        layout="@layout/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomBarLinearLayout"
        android:layout_below="@+id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:text="User name"
                android:textAllCaps="true"
                android:textColor="@color/TheamDarkColor"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userNameEditText"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@drawable/theam_light_button_drawable"
                android:hint="Enter user name"
                android:padding="7dp"
                android:singleLine="true"
                android:textColor="@color/White"
                android:textColorHint="@color/WhiteSmoke" />

            <TextView
                android:id="@+id/pwdTextView"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:text="Password"
                android:textAllCaps="true"
                android:textColor="@color/TheamDarkColor"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pwdEditText"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@drawable/theam_light_button_drawable"
                android:hint="Enter password name"
                android:padding="7dp"
                android:singleLine="true"
                android:textColor="@color/White"
                android:textColorHint="@color/WhiteSmoke" />

            <TextView
                android:id="@+id/confirmPwdTextView"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:text="Confirm Password"
                android:textAllCaps="true"
                android:textColor="@color/TheamDarkColor"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/confirmPwdEditText"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@drawable/theam_light_button_drawable"
                android:hint="Enter password agian"
                android:padding="7dp"
                android:singleLine="true"
                android:textColor="@color/White"
                android:textColorHint="@color/WhiteSmoke" />

            <TextView
                android:id="@+id/fullNameTextView"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:text="Full name"
                android:textAllCaps="true"
                android:textColor="@color/TheamDarkColor"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fullNameEditText"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@drawable/theam_light_button_drawable"
                android:hint="Enter full name"
                android:padding="7dp"
                android:singleLine="true"
                android:textColor="@color/White"
                android:textColorHint="@color/WhiteSmoke" />

            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:text="Address"
                android:textAllCaps="true"
                android:textColor="@color/TheamDarkColor"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addressEditText"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@drawable/theam_light_button_drawable"
                android:hint="Enter full address"
                android:padding="7dp"
                android:singleLine="true"
                android:textColor="@color/White"
                android:textColorHint="@color/WhiteSmoke" />

            <TextView
                android:id="@+id/mobnoTextView"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:text="Mobile number"
                android:textAllCaps="true"
                android:textColor="@color/TheamDarkColor"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/mobnoEditText"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@drawable/theam_light_button_drawable"
                android:hint="Enter mobile number"
                android:inputType="number"
                android:maxLength="10"
                android:padding="7dp"
                android:singleLine="true"
                android:textColor="@color/White"
                android:textColorHint="@color/WhiteSmoke" />

            <TextView
                android:id="@+id/dobLabel"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:text="Date of Birth"
                android:textAllCaps="true"
                android:textColor="@color/TheamDarkColor"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dobTextView"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@drawable/theam_light_button_drawable"
                android:hint="Select your date of birth"
                android:padding="7dp"
                android:singleLine="true"
                android:textColor="@color/White"
                android:textColorHint="@color/WhiteSmoke" />

            <TextView
                android:id="@+id/genderLabel"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:text="Gender"
                android:textAllCaps="true"
                android:textColor="@color/TheamDarkColor"
                android:textSize="15dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGrp"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Male"
                    android:textSize="14dp" />

                <RadioButton
                    android:id="@+id/radioF"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="Female"
                    android:textSize="14dp" />
            </RadioGroup>


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomBarLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/TheamDarkColor">

        <TextView
            android:id="@+id/registerBtnTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:text="Let's Register"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:textSize="25dp" />

    </LinearLayout>


</RelativeLayout>
